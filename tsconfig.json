  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "rootDir": "./script/src",
    "outDir": "./script/dist",

    "strict": true,
    "skipLibCheck": true,

    "removeComments": true,
    "sourceMap": false,

    "forceConsistentCasingInFileNames": true
  },
  "include": ["script/src/**/*.ts"]
}